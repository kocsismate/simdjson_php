# DO NOT MODIFY THIS AUTOGENERATED FILE
# Change it in m4 folder
FROM php:8.0-cli-alpine3.12

COPY . /tmp/simdjson

# persistent / runtime deps
ENV PHPIZE_DEPS \
    autoconf \
    g++ \
    gcc \
    make \
    pkgconf \
    git \
    re2c

RUN set -xe \
    && apk add --no-cache --virtual .build-deps \
        $PHPIZE_DEPS \
    && cd /tmp/simdjson \
        && phpize  \
        && ./configure  \
        && make  \
        && make install \
        && make test \
        && rm -rf /tmp/simdjson \
        && echo "extension=simdjson.so" > /usr/local/etc/php/conf.d/simdjson.ini
